<Window x:Class="RAA_Level2_Challenges.WinResults"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAA_Level2_Challenges"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Results" Grid.Row="0" FontWeight="Bold" FontSize="36" VerticalAlignment="Center"/>
        <Label Content="The following things happened:" Grid.Row="1" FontWeight="Bold" VerticalAlignment="Bottom"/>
        <ListBox x:Name="lbxElements" Grid.Row="2" Grid.Column="0"/>
        <Button x:Name="btnClose" Content="Close" Width="100" Height="30" Grid.Row="3" Click="btnClose_Click"/>
    </Grid>
</Window>
